{% comment %}
  Airport Theme - Footer Section
  Modern footer with multiple columns and social links
{% endcomment %}

<footer class="footer" role="contentinfo">
  <div class="footer-main">
    <div class="container">
      <div class="footer-content">
        
        <!-- Brand Column -->
        <div class="footer-column footer-brand">
          <div class="footer-logo">
            {% if section.settings.logo %}
              <img 
                src="{{ section.settings.logo | img_url: '150x' }}" 
                alt="{{ shop.name }}"
                class="footer-logo-image"
              >
            {% else %}
              <span class="footer-logo-text">{{ shop.name }}</span>
            {% endif %}
          </div>
          
          {% if section.settings.description %}
            <p class="footer-description">{{ section.settings.description }}</p>
          {% endif %}
          
          <!-- Social Links -->
          {% if section.settings.show_social %}
            <div class="footer-social">
              {% if section.settings.instagram_url %}
                <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram" class="social-link">
